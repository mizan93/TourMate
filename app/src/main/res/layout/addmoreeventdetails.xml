<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/edteventnames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-40dp"
        android:text="Event Name"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edteventbudgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edteventsdates"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Budget: 5000" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/eventimage" />

    <TextView
        android:id="@+id/edteventedndate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date: 20/12/2018"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="216dp" />

    <TextView
        android:id="@+id/edteventsdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edteventedndate"
        android:layout_marginStart="15dp"
        android:text="Start Date: 12/12/2018" />
</RelativeLayout>